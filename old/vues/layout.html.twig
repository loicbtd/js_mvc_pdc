<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>S3 web</title>
    {% block stylesheets %} <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}" >{% endblock %}
</head>
<body>


{% if is_granted('ROLE_ADMIN') %}
    {% include "nav_admin.html.twig" %}
{% elseif  is_granted('ROLE_CLIENT') %}
    {% include "nav_client.html.twig" %}
{% else %}
    {% include "nav_home.html.twig" %}
{% endif%}

<div class="container">
    {% block body %}
        <h2 style="color:blue">layout.html.twig</h2>
        Site de vente projet S3 web IUT
    {% endblock %}
</div><!-- /.container -->


{% block javascripts %}
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="{{ asset('assets/js/jquery-3.4.1.slim.min.js') }}"></script>
    <script src="{{ asset('assets/js/popper.min.js') }}" ></script>
    <script src="{{ asset('assets/js/bootstrap.min.js') }}" ></script>{% endblock %}
</body>
</html>