{% extends "index.twig" %}

{% block root %}
  <div class="container">
    <div class="row">
      <div class="col-12 text-center my-2">
        <h1 class="h4">Fil d'actualité</h1>
      </div>
      <div class="col-12 text-center my-2">
        <a href="/publication/ajout" class="btn btn-primary btn-block">Publier</a>
      </div>
      {% for item in items %}
      <div class="col-12 my-2">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{item.titre}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">De {{item.utilisateur.pseudonyme}}</h6>
            <p class="card-text">{{item.contenu}}</p>
            <a href="/publication/modifier/{{item.id_publication}}" class="btn btn-sm m-1 btn-outline-primary">Éditer</a>
            <a href="/publication/supprimer/{{item.id_publication}}" class='btn btn-sm m-1 btn-outline-danger'>Effacer</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}

