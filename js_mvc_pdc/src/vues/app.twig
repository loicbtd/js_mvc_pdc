{% extends "index.twig" %}

{% from "fragments/navigation.twig" import navigation %}

{% from "activites/connexion.twig" import connexion %}
{% from "activites/enregistrement.twig" import enregistrement %}
{% from "activites/fil.twig" import fil %}
{% from "activites/publication.twig" import publication %}

{% block racine %}

  {% if proprietes.session.utilisateur %}
    {{ navigation(proprietes) }}
  {% endif %}
  {% if proprietes.vue == "/connexion" %}
    {{ connexion(proprietes) }}
  {% elseif proprietes.vue == "/enregistrement" %}
    {{ enregistrement(proprietes) }}
  {% elseif proprietes.vue == "/fil" %}
    {{ fil(proprietes) }}
  {% elseif proprietes.vue == "/publication" %}
    {{ publication(proprietes) }}
  {% endif %}

{% endblock %}