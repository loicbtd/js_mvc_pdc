{% macro fil(items) %}
<div class="container">
  <div class="row">
    <div class="col-12 text-center my-2">
      <h1 class="h4">Fil d'actualité</h1>
    </div>
    <div class="col-12 text-center my-2">
      <a href="/publication/creation" class="btn btn-primary btn-block">Publier</a>
    </div>
    {% for item in items %}
    <div class="col-12 my-2">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{item.titre}}</h5>
          <h6 class="card-subtitle mb-2 text-muted">De {{item.utilisateur.pseudonyme}}</h6>
          <p class="card-text">{{item.contenu}}</p>
          <a href="/publication/modification/{{item.id_publication}}" class="btn btn-sm m-1 btn-outline-primary">Éditer</a>
          <a href="/publication/suppression/{{item.id_publication}}" class='btn btn-sm m-1 btn-outline-danger'>Effacer</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endmacro %}

